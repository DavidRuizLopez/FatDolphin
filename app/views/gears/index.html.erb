<% if @gears != []  %>
  <h2>Index page</h2>
  <h1>See our list of <%= params[:query] %></h1>

  <div class="cards">
      <div class="row row-cols-1 row-cols-md-3 justify-content-center" >
        <% @gears.each do |gear| %>
              <%= link_to gear_path(gear) do %>
                <div class="card-category custom-card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1513652990199-8a52e2313122?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)">
                  <div>
                    <div class="card-body">
                      <h5 class="card-title text-light text-center"><%= gear.name %></h5>
                    </div>
                  </div>
                </div>
              <% end %>
        <% end %>
      </div>

    </div>
  </div>

<% else %>
  <p>Sorry! but <%= params[:query] %> is not one of our categories!</p>
<% end %>

<%= link_to "Go back", root_path %>

