
<div class="container">
  <div class="d-flex justify-content-center">
    <%= render 'shared/search-bar' %>
  </div>
<% if @gears != []  %>

  <h4 class="text-center">See our list of <%= params[:query] %></h4>

  <div class="cards m-3">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 justify-content-center" >
        <% @gears.each do |gear| %>
              <%= link_to gear_path(gear) do %>
              <div class="card-trip m-3">
                <% if gear.photo.attached? %>
                  <%= cl_image_tag gear.photo.key, style:"object-fit: cover; height: 217.8px;" %>
                <% else %>
                  <img class="card-img-top" src="https://images.unsplash.com/photo-1518353053542-7ea33d942319?ixlib=rb-1.2.1&auto=format&fit=crop&w=1351&q=80" alt="Card image cap">
                <% end %>
                <div class="card-trip-infos">
                  <h6 class="card-title"> <%= gear.name %> </h6>
                  <p class="card-trip-pricing">€<%= gear.price %> </p>
                </div>
              </div>
              <% end %>
        <% end %>
      </div>
    </div>
    <%= link_to "Go back", root_path, class: "btn-error"%>

    <h5 class="text-center mt-5 pb-2 border-bottom text-center"><strong>See our list of <%= params[:query] %></strong></h4>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 justify-content-center mt-3" >
    <% @gears.each do |gear| %>
      <%= link_to gear_path(gear) do %>
        <div class="card-trip my-3 mx-2 card-height">
          <% if gear.photo.attached? %>
            <%= cl_image_tag gear.photo.key, style:"object-fit: cover; height: 217.8px;" %>
          <% else %>
            <img class="card-img-top" src="https://images.unsplash.com/photo-1518353053542-7ea33d942319?ixlib=rb-1.2.1&auto=format&fit=crop&w=1351&q=80" alt="Card image cap">
          <% end %>
          <div class="card-trip-infos d-flex justify-content-between p-3">
            <p class="card-title"><strong><%= gear.name %></strong></p>
            <p class="card-trip-pricing">€<%= gear.price %> </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="error">
  <p class="error-message">I'm Sorry! but <%= params[:query] %> is not one of our categories!</p>
  <img src="https://res.cloudinary.com/dvdrzlpz/image/upload/v1582725914/1529054660_Ricki-Barlow-2015-WDW-Mike-Zahara_huqnck.jpg" alt="">
  </div>
  <% end %>
  <div class="d-flex justify-content-center mb-5">
    <%= link_to "Go back", root_path, class: "btn btn-error"%>
  </div>
</div>



